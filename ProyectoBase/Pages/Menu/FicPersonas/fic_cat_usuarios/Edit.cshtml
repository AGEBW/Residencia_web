@page
@model ProyectoBase.Pages.Menu.FicPersonas.fic_cat_usuarios.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Actualizar Información</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="cat_usuario.IdUsuario" />
            <input type="hidden" asp-for="cat_usuario.IdPersona" />
            <input type="hidden" asp-for="cat_usuario.FechaAlta" />
            <input type="hidden" asp-for="cat_usuario.FechaReg" />
            <input type="hidden" asp-for="cat_usuario.UsuarioReg" />
            <input type="hidden" asp-for="cat_usuario.Usuario" />
            <input type="hidden" asp-for="cat_usuario.UsuarioMod"/>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ExpiraP" /> Expira
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ConectadoP" /> Conectado
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">No. de intentos</label>
                <input asp-for="cat_usuario.Numintentos" class="form-control" min="1" />
                <span asp-validation-for="cat_usuario.Numintentos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ActivoP" /> Activo
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BorradoP" /> Borrado
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-warning">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
