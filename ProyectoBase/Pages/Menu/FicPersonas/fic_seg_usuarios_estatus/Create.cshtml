@page
@model ProyectoBase.Pages.Menu.FicPersonas.fic_seg_usuarios_estatus.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Estatus</h2>

<h4>Nuevo Estatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input id="id" asp-for="seg_usuarios_estatu.IdUsuario" class="form-control" type="hidden" />

            <div class="form-group">
                <label class="control-label">Id Estatus</label>
                <select asp-items="ViewBag.IdEstatus" asp-for="seg_usuarios_estatu.IdEstatus" class="form-control"></select>
                <span asp-validation-for="seg_usuarios_estatu.IdEstatus" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Observación</label>
                <input asp-for="seg_usuarios_estatu.Observacion" class="form-control" />
                <span asp-validation-for="seg_usuarios_estatu.Observacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
        </div>
    </div>

    <div>
        <a asp-page="Index" class="btn btn-warning">Atras</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            function getParameterByName(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }

            var parametro = getParameterByName('id');
            $('#id').val(parametro);
        </script>
    }
