@page 
@model ProyectoBase.Pages.Menu.FicPersonas.fic_rh_cat_domicilios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Domicilios</h2>
<label>@Microsoft.AspNetCore.Mvc.Razor.Global.id </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.control </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.nombre </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.ap </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.am </label>
    <p>
        <a asp-page="Create" class="btn btn-danger" asp-route-id="@Microsoft.AspNetCore.Mvc.Razor.Global.id">Nuevo domicilio</a>
    </p>

    <div class="row">
        <div class="col-lg-6">
            <form>
                <input type="text" style="height:30px; border-radius:5px" asp-for="search">
                <input type="submit" class="btn-danger" style="border-radius:5px" value="Filtrar" />

                <input type="text" style="height:30px; border-radius:5px" asp-for="id" hidden>

            </form>
        </div>
       

    </div>
    <div id="div1">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Domicilio)
                    </th>
                    <th>
                        <div>Entre Calle 1</div>
                    </th>
                    <th>
                        <div>Entre Calle 2</div>
                    </th>
                    <th>
                        Codigo Postal
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Principal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Pais)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Municipio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Localidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Colonia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Referencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Activo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rh_cat_domicilio[0].Borrado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.rh_cat_domicilio)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Domicilio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntreCalle1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntreCalle2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoPostal)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Principal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pais)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Municipio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colonia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Referencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Borrado)
                    </td>
                    <td>
                        <div class="dropdown" style="float:right;">
                            <button class="dropbtn">Opciones</button>
                            <div class="dropdown-content">
                                <a asp-page="./Edit" asp-route-id="@item.IdDomicilio" asp-route-idP="@Model.id" asp-route-control="@Model.control" asp-route-searchString="@Model.searchString" asp-route-ap="@Model.ap" asp-route-am="@Model.am">Editar</a>
                                <a asp-page="./Details" asp-route-id="@item.IdDomicilio" asp-route-idP="@Model.id" asp-route-control="@Model.control" asp-route-searchString="@Model.searchString" asp-route-ap="@Model.ap" asp-route-am="@Model.am">Detalles</a>
                                <a asp-page="./Delete" asp-route-id="@item.IdDomicilio" asp-route-idP="@Model.id" asp-route-control="@Model.control" asp-route-searchString="@Model.searchString" asp-route-ap="@Model.ap" asp-route-am="@Model.am">Borrar</a>
                            </div>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>

<style>

    .dropbtn {
        background-color: #E32F2F;
        color: white;
        padding: 5px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        height: 30px;
        width: 90px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: #f9f9f9;
        min-width: 90px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #FBB6B6;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #C62121;
    }
</style>
