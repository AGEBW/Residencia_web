@page
@model ProyectoBase.Pages.Menu.FicPersonas.fic_rh_cat_dir_webs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Actualizar Información</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="rh_cat_dir_web.IdDirWeb" />
            <input type="hidden" asp-for="rh_cat_dir_web.ClaveReferencia" />
            <input type="hidden" asp-for="rh_cat_dir_web.FechaReg" />
            <input type="hidden" asp-for="rh_cat_dir_web.UsuarioReg" />
            <input type="hidden" asp-for="rh_cat_dir_web.UsuarioMod" />
            <input type="hidden" asp-for="rh_cat_dir_web.IdTipoGenDirWeb" value="9" />

            <div class="form-group">
                <label class="control-label">Descripción</label>
                <input asp-for="rh_cat_dir_web.DesDirWeb" class="form-control" />
                <span asp-validation-for="rh_cat_dir_web.DesDirWeb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo de dir web</label>
                <select asp-for="rh_cat_dir_web.IdGenDirWeb" class="form-control" asp-items="ViewBag.IdTipoDirWeb"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Dirección Web</label>
                <input asp-for="rh_cat_dir_web.DirWeb" class="form-control" />
                <span asp-validation-for="rh_cat_dir_web.DirWeb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="DirWebP" /> Dirección web Principal
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="rh_cat_dir_web.Referencia" class="control-label"></label>
                <input asp-for="rh_cat_dir_web.Referencia" class="form-control" />
                <span asp-validation-for="rh_cat_dir_web.Referencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ActivoP" /> Activo
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BorradoP" /> Borrado
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-id="@Microsoft.AspNetCore.Mvc.Razor.Global.id" asp-route-control="@Model.Control" asp-route-searchString="@Model.SearchString" asp-route-ap="@Model.Ap" asp-route-am="@Model.Am" class=" btn btn-warning">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
