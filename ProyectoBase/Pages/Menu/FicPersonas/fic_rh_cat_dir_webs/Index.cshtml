@page
@model ProyectoBase.Pages.Menu.FicPersonas.fic_rh_cat_dir_webs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Dirección Web</h2>
<label>@Microsoft.AspNetCore.Mvc.Razor.Global.id </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.control </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.nombre </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.ap </label> <label>@Microsoft.AspNetCore.Mvc.Razor.Global.am </label>
<p>
    <a asp-page="Create" class="btn btn-danger" asp-route-id="@Microsoft.AspNetCore.Mvc.Razor.Global.id">Nueva Dirección Web</a>
</p>

<div class="row">
    <div class="col-lg-6">
        <form>
            <input type="text" style="height:30px; border-radius:5px" asp-for="search">
            <input type="submit" class="btn-danger" style="border-radius:5px" value="Filtrar" />

            <input type="text" style="height:30px; border-radius:5px" asp-for="id" hidden>

        </form>
    </div>


</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <div>Descripción</div>
            </th>
            <th>
                <div>Dirección Web</div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rh_cat_dir_web[0].Principal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rh_cat_dir_web[0].Referencia)
            </th>
            <th>
                <div>Fecha de Registro</div>
            </th>
            <th>
                <div>Ultima Modificación</div>
            </th>
            <th>
                <div>Usuario Registrado</div>
            </th>
            <th>
                <div>Usuario Modificado</div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rh_cat_dir_web[0].Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rh_cat_dir_web[0].Borrado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.rh_cat_dir_web)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DesDirWeb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DirWeb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Principal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaUltMod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioReg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioMod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Borrado)
                </td>
                <td>
                    <div class="dropdown" style="float:right;">
                        <button class="dropbtn">Opciones</button>
                        <div class="dropdown-content">
                            <a asp-page="./Edit" asp-route-id="@item.IdDirWeb">Editar</a>
                            <a asp-page="./Details" asp-route-id="@item.IdDirWeb">Detalles</a>
                            <a asp-page="./Delete" asp-route-id="@item.IdDirWeb">Borrar</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>

    .dropbtn {
        background-color: #E32F2F;
        color: white;
        padding: 5px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        height: 30px;
        width: 90px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: #f9f9f9;
        min-width: 90px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #FBB6B6;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #C62121;
    }
</style>
